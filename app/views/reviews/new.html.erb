<h1>New Review for <%= @restaurant.name %></h1>

<!-- what the form helper doing for us? -->
<!-- 1.) action => path -->
<!-- 2.) method => get/post/patch -->


<!-- for a nested route, put value in an array -->
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

